{
  "name": "portal",
  "version": "0.0.1",
  "main": "./bin/server",
  "private": true,
  "description": "A case study project to connect with recruiters, HR managers & people in the same industry to find the best job opportunities,",
  "scripts": {
    "prestart": "node setup.js",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node ./bin/server",
    "client": "node ./bin/client",
    "serve": "nodemon ./bin/server",
    "debug": "set DEBUG=myapp:* & npm start",
    "test": "jest"
  },
  "author": "Mumbo IO <https://mumbo-pro.github.io/mumbo.io/>",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^4.1.2",
    "config": "^3.2.2",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.5",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "nodemon": "^1.19.2",
    "shelljs": "^0.8.4",
    "superagent": "5.1.0",
    "supertest": "4.0.2"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gsonly/portal-monorepo.git"
  },
  "keywords": [
    "portal",
    "job",
    "jobsearch"
  ],
  "bugs": {
    "url": "https://github.com/gsonly/portal-monorepo/issues"
  },
  "homepage": "https://github.com/gsonly/portal-monorepo#readme",
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
